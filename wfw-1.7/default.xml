            <SYS_TASK_CREATE>La tâche ne peut pas être créée</SYS_TASK_CREATE>
            <SYS_TASK_UPDATE>La tâche ne peut pas être mise à jour</SYS_TASK_UPDATE>
            
        </errors>
        
        <messages>
            <!-- WFW -->
            <INPUT_MSG_INVALID_FIELD>
                Merci de renseigner le champ: $FIELD_NAME.
            </INPUT_MSG_INVALID_FIELD>
            <SOCK_SERVER_CONNECTION>
                Cause retourné par le socket #$ERRNO : $ERRSTR
                [$SERVER : $PORT]
            </SOCK_SERVER_CONNECTION>
            <WFW_MSG_POPULATE_FORM>
                Merci de compléter le formulaire
            </WFW_MSG_POPULATE_FORM>
        </messages>
        
        <fields>
            <!-- MAIL -->
            <catalog_entry_id>Catalogue</catalog_entry_id>
            <catalog_item_id>Item</catalog_item_id>
            <catalog_category_id>Catégorie</catalog_category_id>
            <search_string>Texte à rechercher</search_string>
        </fields>
        
    </results>
</site>